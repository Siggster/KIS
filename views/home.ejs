<% include header %>
<body>
  <div class="container-div">
    <div class="info-div">
      <div id="logo-div">
        <img src="https://cdn.glitch.com/a1887b2c-df5e-4f4c-b470-85e5f90a00e2%2Flogo.svg?v=1574164877937" alt="" />
        <h1>Brainwriting</h1>
      </div>
      <div class="form-div">
        <form name="form1" method="POST" action="/session" class="form">
          <div class="form-group">
            <label for="name"> Name of session: </label> <br />
            <input type="text" name="session_name" id="name" required />
          </div>
          <div class="form-group">
            <label for="time">Select time intervall for session</label> <br />
            <select class="form-control" id="time" name="session_time">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </div>
          <div class="form-group">
            <label for="s_brief">Session brief</label> <br />
            <textarea
              class="form-control"
              name="session_brief"
              id="s_brief"
              rows="4"
            placeholder="Write session brief here.."
            ></textarea>
          </div>
          <div class="form-group">
            <label for="email_list">Invite list</label> <br />
            <textarea
              class="form-control"
              name="email_list"
              id="email_list"
              rows="3"
            placeholder="Send link to email here.."
            ></textarea>
          </div>
          <input class="btn btn-primary btn-lg" type="submit" value="Start session" />
        </form>
      </div>
    </div>
    <div id="img-div">
      <img src="https://cdn.glitch.com/a1887b2c-df5e-4f4c-b470-85e5f90a00e2%2Flightbulb.jpg?v=1574164850254" alt="imgage of lightbulb" />
    </div>
  </div>
</body>

<% include footer %>
